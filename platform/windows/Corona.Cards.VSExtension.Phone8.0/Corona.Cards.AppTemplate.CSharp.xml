		</TemplateData>
		<TemplateContent>
			<Project File="..\Corona.Cards.AppTemplate.CSharp.Phone8.0\Corona.Cards.AppTemplate.CSharp.Phone8.0.csproj" ReplaceParameters="true"/>
		</TemplateContent>
	</VSTemplate>
</VSProjectTemplateBuilder>
